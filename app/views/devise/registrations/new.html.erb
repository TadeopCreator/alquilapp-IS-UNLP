<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-md-3 mb-3">
    <div class="field">    
      Nombre<% label_tag "name" %><br />
      <input required <%= text_field_tag "name", nil, autofocus: true, placeholder:"Nombre", class:"form-control" %>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="field">    
    Apellido<% label_tag "lastname" %><br />
    <input required <%= text_field_tag "lastname", nil, autofocus: true, placeholder:"Apellido", class:"form-control" %>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="field"> 
    DNI<% label_tag "DNI" %><br />
    <input required <%= text_field_tag "dni", nil, autofocus: true, placeholder:"DNI", class:"form-control" %>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="field">    
    Teléfono<% label_tag "phone" %><br />
    <input required <%= phone_field "phone", nil, autofocus: true, placeholder:"Teléfono", class:"form-control" %>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="field">
      <%= f.label :email %><br />
      <input required <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="field">
      Contraseña<% f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> carácteres mínimo)</em>
      <% end %><br />
      <input required <%= f.password_field :password, autocomplete: "new-password", autofocus: true, placeholder:"Confirmacion contraseña", class:"form-control" %>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="field">
      Confirmar contraseña<% f.label :password_confirmation %><br />
      <input required <%= f.password_field :password_confirmation, autocomplete: "new-password", autofocus: true, placeholder:"Contraseña", class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
      <label class="form-check-label" for="invalidCheck">
        <%= link_to "Aceptar Términos y Condiciones", terminos_condiciones_show_path %>
      </label>
    </div>
  </div>

  <div class="actions"><br />
    <%= f.submit "Registrarse", class:'btn bg-color-alquilapp text-white' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<script>
// Example starter JavaScript for disabling form submissions if there are invalid fields
(function() {
  'use strict';
  window.addEventListener('load', function() {
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.getElementsByClassName('needs-validation');
    // Loop over them and prevent submission
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>