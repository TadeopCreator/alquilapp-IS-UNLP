<h4>Supervisores</h4>


<div><%= link_to 'Añadir supervisor', new_supervisor_path, class:"btn btn-outline-primary" %></div>


<% if Supervisor.all == [] %>
  <div class="my-3 p-4 border border border-secondary rounded">
    <div class="col-12 text-start">
      <div class="text-start">
        Aún no hay supervisores
      </div>
      <div class="row text-start">
        <%= link_to 'Añadir supervisor', new_supervisor_path %>
      </div>
    </div>
  </div>
<% else %>
  <div id="autos" class="my-3 p-4 border border border-secondary rounded">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Apellido</th>
        <th scope="col">DNI</th>
        <th scope="col">Contacto</th>
        <th scope="col">Habilitado</th>
        <th scope="col">Acción</th>
      </tr>
    </thead>
    <tbody>
    <% @supervisors = Supervisor.all %>
      <% @supervisors.each do |supervisor| %>
        <% if not supervisor.borrado %>   
          <%= render supervisor %>
        <% end %>
      <% end %>
    </tbody>
</table>
</div>
<% end %>