<%= form_with(model: report) do |form| %>

<div class="row">
<div class="col-4">

 <% user_ID = current_user.id
  sql = "SELECT * FROM users WHERE id='" + user_ID.to_s + "'"
  records_array = ActiveRecord::Base.connection.execute(sql)
  id_rol = records_array[0]["id_rol"] 
  @usuario = Usuario.find(id_rol.to_s)

  sql = "SELECT * FROM historials WHERE id_usr='" + @usuario[:id].to_s + "' ORDER BY id DESC LIMIT 1" 
  records_array = ActiveRecord::Base.connection.execute(sql)
  id_auto = records_array[0]["id_auto"]

  sql_auto = "SELECT * FROM autos WHERE id='" + id_auto.to_s + "'" 
  records_array_auto = ActiveRecord::Base.connection.execute(sql_auto)
  auto_alquilado = records_array_auto[0] %>

<div class="col-md-8 mb-3">
  <div>
    Título <% form.label :title, style: "display: block" %>
    <input required <%= form.text_field :title, class:"form-control", value:"Incidente con el Vehículo" %></input>
  </div>
</div>

<div class="col-md-8 mb-3">
  <div>
    Descripción <% form.label :description, style: "display: block" %>
    <textarea required rows="3" <%= form.text_field :description, class:"form-control" %></textarea>
  </div>
</div>

<div class="col-md-8 mb-3">
  <div>
    Patente <% form.label :patente, style: "display: block" %>
    <input readonly required <%= form.text_field :patente, class:"form-control", value:auto_alquilado["patente"] %></input>
  </div>
</div>

<div class="col-md-8 mb-3">
  <div>
    Fecha <% form.label :date, style: "display: block" %>
    <input readonly required <%= form.datetime_field :date, class:"form-control", value:Time.now.strftime("%Y-%m-%dT%H:%M") %></input>
  </div>
</div>

<div class="col-md-8 mb-3">    
    <div class="field"> 
        <div>
          Fotografía (opcional)<% form.label :image %> <br/>
          <input <%= form.file_field :image, class:"form-control" %></input>
        </div>
    </div>
</div>

  <% form.label :src, style: "display: block" %>
  <input type="hidden" <%= form.text_field :src, class:"form-control", value:id_rol %></input>


  <div>
    <button class='btn bg-color-alquilapp text-white' <%= form.submit %>Enviar reporte</button>
  </div>

</div>
</div>

<% end %>
