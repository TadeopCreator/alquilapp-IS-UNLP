<h4>Licencias</h3>

<% if Usuario.all == [] %>
  <div class="m-3 p-4 border border-2 border-dark rounded">
    <div class="col-12 text-start">
      <div class="text-start">
        Aún no hay usuarios
      </div>
    </div>
  </div>
<% else %>
  <div id="autos" class="m-3 p-4 border border-2 border-dark rounded">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Apellido</th>
        <th scope="col">DNI</th>
        <th scope="col">Licencia</th>
        <%#%<th scope="col">Habilitado</th> %>
       <%#% <th scope="col">Borrado</th> %>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @usuarios = Usuario.all %>
    <% @usuarios.each do |usuario| %>      
      <%# <%= usuario.name %> <%# Debemos de cambiar esto, ya que solo me interesa en a lista dos cosas pero me cabia todo en detalles%>
      <% if usuario.send_license == 1%>
      <div id="<%= dom_id usuario %>">
        <tr>
           <td><%= usuario.name %></td>
           <td><%= usuario.lastname%></td>
           <td><%= usuario.dni %></td>
           <td><%= image_tag usuario.image_url if usuario.image%></td>  
        </tr>
      </div> 
       <%end%>
    <% end %>
    </tbody>
</table>
</div>
<% end %>