    <div class="row justify-content-center">
      <div class="col-4"> 
        <div>
          <b> Patente: </b> <%= @auto.patente %> <br/>
        </div>
      </div>
    </div>
    <br>
    <div class="row justify-content-center">
      <div class="col-4"> 
