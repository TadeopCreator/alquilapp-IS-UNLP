<h2>Mis Recibos</h2>

<br>

<% if @historial == [] %>
  <div class="my-3 p-4 border border border-secondary rounded">
    <div class="col-12 text-start">
        <div class="text-start">
          Aún no hay recibos
        </div>
        <div class="row text-start">
          <%= link_to "Alquilar un vehículo", autos_path %>
        </div>
    </div>        
  </div>
<% else %>
  <div id="autos" class="table-responsive border border border-secondary rounded">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Fecha</th>
          <th scope="col">Vehiculo</th>
          <th scope="col">Color</th>
          <th scope="col">Monto</th>
          <th scope="col">Tiempo</th>
          <th scope="col">Multado</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
      <% @historial.each do |historial| %>
        <%= render historial %>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<br>
<div>
  <%= link_to "Atrás", autos_path, class:"btn btn-outline-primary"  %>
</div>