<div id="<%= dom_id message %>">

<div class="ms-auto text-center">

<% if (message.message_type == 0) %>
  <h2>Mensaje</h2>
<% elsif (message.message_type == 2) %>
  <h2>Comentario</h2>
<% end %>

<br>

<h5>Título</h5>
<%= message.title %>

<br>
<br>

<h5>Descripción</h5>
<div class="mx-auto col-md-3 mb-3">
  <p class="text-break"><%= message.description %></p>
</div>

<br>
<br>

  <% if message.image != nil %>
    <h5>Fotografía</h5>
    <%= image_tag message.image_url %>
  <% end %>

<div>
  <%= link_to "Atrás", :back, class:"btn btn-outline-primary" %>
</div>

</div>
</div>
